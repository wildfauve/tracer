<%= form_tag(down_load_loads_path(params.merge(:format => :json, :method => :post, :class => "custom") ) ) do  %>
   <div class="row">
     <div class="small-3 columns">
       <%= label_tag :project_name, nil, class: "right inline", title: "A name for the project", data: {tooltip: true } %>
     </div>
     <div class="small-9 columns">
       <%= text_field_tag :project_name %>
     </div> 
   </div>
   <div class="row">
      <div class="small-3 columns">
         <%= label_tag :template, nil, class: "right inline", title: "Download as Template only", data: {tooltip: true } %>
      </div>
      <div class="small-9 columns">
         <%= label_tag :is_template, 'Yes', :value => 'yes' %>
         <%= radio_button_tag 'is_template', 'yes' %>
         <%= label_tag :is_template, 'No', :value => 'no' %>         
         <%= radio_button_tag 'is_template', 'no', true %>         
      </div>
   <div class="row">
     <div class="small-12 columns">
        <%= submit_tag "Save", :class => "button" %>
      </div>
  </div>
<% end %>