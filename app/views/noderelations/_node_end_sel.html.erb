<div class="row">
   <div class="large-6 columns"> 
      <%= select_tag(:end, options_for_select(type_list(@type, @typearc, @position, :end_node)), :include_blank => true, :prompt => "Select a Node Type", :class => "end_node") %>
   </div>
   <div class="large-6 columns">
      <% if @formctx == "node" %>
         <%= select_tag(:end_instance, options_for_select(node_list(@typearc)), :include_blank => true, :prompt => "Select a Node Instance", :class => "end_node_instance") %>
      <% end %>
   </div>
</div>
