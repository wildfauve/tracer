<%= form_tag(noderelations_path) do %>
	<div id='start_node'>
		<p>Start Node Form</p>
		<% if @profile.start.class == Node %>
			<%= hidden_field_tag('start[node]', @profile.start.id) %>		
		<% else %>
			<%= hidden_field_tag 'start[type]', @profile.start.id%>
			<p>Properties</p>
			<% for p in @profile.start.properties.each %>
				<%= label_tag p.name%>
				<%= text_field_tag "start[#{p.name}]"%>			
			<% end %>
		<% end %>
	</div>
	<div id='rel'>
		<p>Relationship Form</p>
		<%= hidden_field_tag 'rel[type]', @profile.rel.name%>		
		<p>Properties</p>
		<% for p in @profile.rel.properties.each %>
			<%= label_tag p.name%>
			<%= text_field_tag "rel[#{p.name}]"%>			
		<% end %>
	</div>	
	<div id='end_node'>
		<p>End Node Form</p>
		<%= hidden_field_tag 'end[type]', @profile.end.id%>
		<p>Properties</p>
		<% for p in @profile.end.properties%>
			<%= label_tag p.name%>
			<%= text_field_tag "end[#{p.name}]"%>			
		<% end %>
	</div>
	
	<%= submit_tag "Confirm" %>		
<% end %>