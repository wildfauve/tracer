<%- model_class = Reltype -%>
<%= link_to 'New relationship type', new_reltype_path, :class => " small button" %>
<table class="table table-striped">
  <thead>
    <tr>
		<th>Name</th>
		<th>Description</th>
		<th>Properties</th>
		<th>Arc</th>		
		<th>Actions</th>				
	</tr>
  </thead>
  <tbody>

<% for rel in @rels do %>
<tr>
	<td><%= link_to rel.name, reltype_path(rel) %></td>
	<td>
		<p><%= rel.desc%></p>
	</td>	
	<td>
		<% for prop in rel.properties%>
			<p>
				Name: <%= prop.name%>
				Type: <%= prop.proptype%>
				Name Property?: <%= prop.name_prop%>
			</p>			
		<%end%>
	</td>
	<td>
		<% if rel.arcprop %>
			<p>Start: <%= rel.arcprop.start_node.type_ref%> </p>
			<p>End: <%= rel.arcprop.end_node.type_ref%> </p>
			<p>Directed: <%= rel.arcprop.directed %></p>
		<%end %>
	</td>
	<td>
		<%= link_to 'edit', edit_reltype_path(rel), :class => "tiny button"%>
		<%= link_to 'delete', reltype_path(rel), :class => "tiny button", :method => :delete%>		
	</td>
</tr>	
<%end%>
</table>